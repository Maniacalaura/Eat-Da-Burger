<div class="container">
    <div class="row">
        <div class="col-12" id="bob">
            <img src="../public/assets/img/Bobs_burger.jpg" height="250" width="300">
                <h2 id="eat">Eat-da-burger!</h2>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 id="menu">Menu</h2>
            <ul>
            {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                {{this.name}}
                <form action="/api/burgers/:id" method="PUT">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Devour!</button>
                </form>
            </li>
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2 id="devoured">Burgers Devoured</h2>
            <ul>
            {{#each burgers}}
                {{#if this.devoured}} 
                <li>
                    {{this.name}}
                    <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    </form>
                </li>
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12" id="suggest">
            <h2>Suggest a NEW Burger!</h2>
            <form class="create-form">
                <div class="form-group">
                <label for="burg">Punny Burger Name:</label>
                <input type="text" id="burg" name="name">
                    <button type="submit">Suggest!</button>
                </div>
            </form>
        </div>
    </div>
</div>